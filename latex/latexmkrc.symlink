$pdf_mode = 1;
$pdf_previewer = "open -a Preview";
$clean_ext = "aux bbl blg fdb_latexmk fls log out synctex.gz";

# Needed for Papers.app which adds an unnecessary URL attribute to bibtex output
system('for x in *.bib; do ' .
'if [[ $( head -n 1 ${x} ) == "%% This BibTeX bibliography file in UTF-8 format was created using Papers." ]]; then ' .
'(sed -i ".backup" "/^URL/d" ${x} && rm ${x}.backup);' .
'fi ' .
'done');
