error-log "/root/.local/share/newsboat/error_log"
urls-source "oldreader"
oldreader-login `python3 -c 'import configparser; c = configparser.ConfigParser(); c.read("/root/.local/share/newsboat/passwd"); print(c["oldreader"]["username"]);'`
oldreader-password `python3 -c 'import configparser; c = configparser.ConfigParser(); c.read("/root/.local/share/newsboat/passwd"); print(c["oldreader"]["password"]);'`
oldreader-show-special-feeds no

color listnormal default default
color listfocus color0 color6
color listnormal_unread color6 default
color listfocus_unread color0 color6
color title color0 color6
show-keymap-hint no
show-title-bar yes
swap-title-and-hints yes

datetime-format "%F"
feed-sort-order firsttag-asc
feedlist-format "%3i %10T%S%t %> %U "
feedlist-title-format " newsboat: index %> %?U?%U unread? "
article-sort-order date-asc
articlelist-format "%4i %D %?T?|%=17T| ?%t"
articlelist-title-format " newsboat: %T %> %?u?%u unread? "
itemview-title-format " newsboat: %F %> %?u?%u unread? "

auto-reload yes
suppress-first-reload yes
show-read-articles no
show-read-feeds yes
toggleitemread-jumps-to-next-unread yes

bind $ feedlist,articlelist reload-all
bind j feedlist,articlelist,article next
bind k feedlist,articlelist,article prev
bind ^F feedlist,articlelist pagedown
bind ^B feedlist,articlelist pageup
bind ^U articlelist toggle-article-read
bind A articlelist mark-all-above-as-read
bind ^L articlelist,article bookmark
bind ! articlelist quit
bind ! article quit; quit

bookmark-cmd "/root/.config/newsboat/bookmark.py"
bookmark-autopilot yes
