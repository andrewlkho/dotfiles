[core]
    fileMode = false
    editor = "vim -c 'set wrap tw=76 fo=tqwanl1 spell ft=markdown' +1"
    pager = cat
    autocrlf = false
    excludesfile = ~/.gitignore

[alias]
    st = "status -sb"
    lg = "log --color -n 20 --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --"
    wtf = "!git-wtf"

