# mailboxes
set mbox_type = Maildir
set folder = ~/mail/rss/
set spoolfile = +Incoming

# behaviour
set auto_tag
set nobeep
set check_new
set noconfirmappend
set delete = yes
set nomark_old
set nowait_key
set move
set mbox = +Archive

# display
set nohelp
set hide_limited
set nomenu_move_off
set menu_scroll
set pager_stop
set smart_wrap
set markers = no
set wrap = 80
set sort = date-sent
set index_format = "%4C (%Z) %[%Y-%m-%d] %25.25F : %s "
set status_format = "-%r-Mutt: %f [Msgs:%?M?%M/?%m%?n? New:%n?%?d?  Del:%d?%?F? Flag:%F?%?t? Tag:%t?%?p? Post:%p?%?l? %l?]---(%s/%S)-%>-"

# Message Header Display
ignore *
unignore From: Date: Subject:

# miscellaneous
set sleep_time = 0
set header_cache = ~/.mutt-rss/header_cache
source ~/.mutt-rss/keybindings
source ~/.mutt-rss/colours
