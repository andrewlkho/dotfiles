color index color11 default "~F"

color hdrdefault color15 default
color error color1 default
color normal default default
color quoted color5 default

# Use a different colour for notmuch-results to remind me that we are in a
# virtual read-only folder
folder-hook . 'color indicator color0 color6'
folder-hook . 'color status color0 color6'
folder-hook notmuch-results 'color indicator color0 color5'
folder-hook notmuch-results 'color status color0 color5'

color sidebar_indicator color6 default
color sidebar_highlight color0 color6
color sidebar_flagged default default
color sidebar_new default default
color sidebar_divider color0 color0

