# Start offlineimap in the background before mutt
mutto() {
    # Seed gpg-agent with passphrase
    gpg --quiet --decrypt ~/.secrets.gpg > /dev/null

    # Start offlineimap
    offlineimap &

    # Start mutt
    mutt

    # After mutt has exited, terminate offlineimap
    pkill -SIGTERM offlineimap
}
